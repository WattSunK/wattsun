# App/server
PORT=3001
NODE_ENV=development
SESSION_SECRET=change_me_dev

# Admin bootstrap (used on first run)
ADMIN_BOOTSTRAP_EMAIL=admin@example.com
ADMIN_BOOTSTRAP_PASSWORD=ChangeMe123

# SQLite paths (keep these aligned)
SQLITE_MAIN=./data/dev/wattsun.dev.db
SQLITE_DB=${SQLITE_MAIN}
DB_PATH_USERS=${SQLITE_MAIN}
DB_PATH_INVENTORY=./data/dev/inventory.dev.db
DB_PATH_ADMIN=${SQLITE_MAIN}
# Additional path knobs
# DB_PATH_OVERLAY=./data/dev/overlay.dev.db
# WATTSUN_DB_PATH=${SQLITE_MAIN}
# WS_ADMIN_DB=${SQLITE_MAIN}
# DB_PATH=./data/dev/marketplace.dev.db

# SMTP (Gmail example; use an App Password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your_gmail@example.com
SMTP_PASS=your_gmail_app_password
SMTP_FROM="WattSun <your_gmail@example.com>"

# Notifications worker
WORKER_BATCH=20
WORKER_INTERVAL_MS=60000
NOTIFY_DRY_RUN=1

# Alerts/watcher
EMAIL_FROM=no-reply@wattsun.local
ALERT_EMAIL_TO=alerts@wattsun.local
ALERT_POLL_MS=30000

# PID/audit alerts
PID_ALERT_LOG=./logs/alerts.log
AUDIT_POLL_MS=60000

# Health/log dirs
LOG_DIR=./logs
RUN_DIR=./run

